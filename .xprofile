#!/bin/bash

xrdb -merge .Xresources

exec xbanish &

exec slstatus &

# Nabi, the kitty, speaks Korean
export XIM=nabi
export XIM_ARGS=
export XIM_PROGRAM="nabi"
export XMODIFIERS="@im=nabi"
export GTK_IM_MODULE=xim
export QT_IM_MODULE=xim

xset r rate 250 25

xinput set-prop "TPPS/2 IBM TrackPoint" "EmulateWheel" "true"
xinput set-prop "TPPS/2 IBM TrackPoint" "EmulateWheelButton" "2"
xinput set-prop "TPPS/2 IBM TrackPoint" "Device Accel Constant Deceleration" "1.44"

dbus-update-activation-environment --systemd DISPLAY
eval "$(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
export SSH_AUTH_SOCK

~/.fehbg &
